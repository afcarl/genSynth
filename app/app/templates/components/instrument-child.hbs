<div class="col-md-4 col-sm-4">
  <div {{action "toggleSelected"}} {{bind-attr class=":child :instrument selected"}}>
    <span class="controls">
      <i {{action "play" bubbles=false}} class="fa fa-play fa-2x fa-fw control"></i>
      <i {{action "toggleNetwork" bubbles=false}} {{bind-attr class=":fa :fa-sitemap :fa-2x :fa-fw :control isShowingNetwork:active"}}></i>
      {{#if isSaved}}
        [inst link]
      {{else}}
        <i {{action "save" bubbles=false}} class="fa fa-floppy-o fa-2x fa-fw control"></i>
      {{/if}}
      <span {{action makeLive bubbles=false}} class="liveToggle">
        <span {{bind-attr class=":liveIcon isLive:active"}}></span>
        <span class="liveHotkey">{{liveHotkey}}</span>
      </span>
    </span>
    <div class="visualizer">
    </div>
  </div>
  {{#if showAdvanced}}
    <div class="lastMutation">
      {{lastMutation}}
    </div>
  {{/if}}
</div>
